{
  "version": "0.2",
  "ignorePaths": [
    "*.dict",
    ".cspell.json",
    "lib/aspera/data",
    "**/*.tex",
    "**/*.html",
    "**/*.pptx"
  ],
  "dictionaryDefinitions": [
    {
      "name": "aspera",
      "path": ".aspera.dict",
      "addWords": true
    },
    {
      "name": "ruby",
      "path": ".ruby.dict",
      "addWords": true
    },
    {
      "name": "tools",
      "path": ".tools.dict",
      "addWords": true
    }
  ],
  "useGitignore": true,
  "dictionaries": [
    "aspera",
    "ruby",
    "tools",
    "technical",
    "shell"
  ],
  "words": [],
  "ignoreWords": [],
  "import": [],
  "enableFiletypes": [
    "makefile",
    "markdown",
    "shellscript"
  ],
  "patterns": [
    {
      "name": "markdown_code_block",
      "pattern": "/^\\s*```(.|\\n)+?^\\s*```/gm"
    },
    {
      "name": "markdown_code_inline",
      "pattern": "/`.*?`/g"
    },
    {
      "name": "quoted_special_words",
      "pattern": "/\".*?\"/g"
    },
    {
      "name": "embedded_ruby_code_block",
      "pattern": "/<%[^%]*%>/g"
    },
    {
      "name": "makefile_only_comments",
      "pattern": "/^[^#]/"
    }
  ],
  "languageSettings": [
    {
      "languageId": "markdown",
      "ignoreRegExpList": [
        "markdown_code_block",
        "markdown_code_inline",
        "quoted_special_words",
        "embedded_ruby_code_block"
      ]
    },
    {
      "languageId": "makefile",
      "ignoreRegExpList": [
        "makefile_only_comments"
      ]
    }
  ],
  "overrides": [
    {
      "filename": "**/Makefile",
      "languageId": "cpp",
      "enabled": true
      // Add any other specific configurations for Makefiles
    }
  ]
}
