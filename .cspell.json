{
  "version": "0.2",
  "ignorePaths": ["*.dict", ".cspell.json"],
  "dictionaryDefinitions": [
    {
      "name": "aspera",
      "path": "aspera.dict",
      "addWords": true
    },
    {
      "name": "ruby",
      "path": "ruby.dict",
      "addWords": true
    }
  ],
  "useGitignore": true,
  "dictionaries": ["aspera", "ruby", "technical"],
  "words": [],
  "ignoreWords": [],
  "import": [],
  "enableFiletypes": ["markdown", "ruby", "shellscript"],
  "patterns": [
    {
      "name": "markdown_code_block",
      "pattern": "/^\\s*```(.|\\n)+?^\\s*```/gm"
    },
    {
      "name": "markdown_code_inline",
      "pattern": "/`.*?`/g"
    },
    {
      "name": "quoted_special_words",
      "pattern": "/\".*?\"/g"
    },
    {
      "name": "embedded_ruby_code_block",
      "pattern": "/<%[^%]*%>/g"
    }
  ],
  "languageSettings": [
    {
      "languageId": "markdown",
      "ignoreRegExpList": [
        "markdown_code_block",
        "markdown_code_inline",
        "quoted_special_words",
        "embedded_ruby_code_block"
      ]
    }
  ]
}
